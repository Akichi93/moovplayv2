{% extends "layouts.admin.app" %}


{% block content %}

	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">

		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Slides</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Accueil</a>
							</li>
							<li class="breadcrumb-item active">Slide</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>


		<hr/>

		<!-- Main content -->
		<!-- Main content -->
			<section class="content"> <div class="container-fluid">
				<div
					class="row">
					<!-- left column -->
					<div
						class="col-md-12">
						<!-- general form elements -->
						<div class="card card-primary">
							<div class="card-header">
								<h3 class="card-title">{{ title }}</h3>
							</div>
							<!-- /.card-header -->
							<!-- form start -->
							<form {% if partenairedata['id'] is empty %} action="{{ url('add-edit-partenaire') }}" {% else %} action="{{ url('add-edit-partenaire' , partenairedata['id']) }}" {% endif %} method="POST">
								{{csrf_field()}}

								<div class="card-body">

									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail1">Titre</label>
												<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Entrez le titre de l" name="nom_partenaire" 
												{% if partenairedata['title'] is not empty %} value="{{ partenairedata['title'] }}" {% else %} value="{{ old('nom_partenaire ') }}" {% endif %}>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail1">Lien</label>
												<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Entrez le nom du correspondant" name="nom_correspondant" {% if partenairedata['nom_correspondant'] is not empty %} value="{{ partenairedata['nom_partenaire'] }}" {% else %} value="{{ old('nom_partenaire ') }}" {% endif %}>
											</div>
										</div>
									</div>

									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail1">Type</label>
												<input type="text" class="form-control" id="exampleInputEmail1" placeholder="Entrez le contact du correspondant" name="contact_partenaire" {% if partenairedata['contact_partenaire'] is not empty %} value="{{ partenairedata['nom_partenaire'] }}" {% else %} value="{{ old('nom_partenaire ') }}" {% endif %}>
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<label for="exampleInputEmail1">Image</label>
												<input type="file" class="form-control" id="exampleInputEmail1"  name="email_partenaire" {% if partenairedata['email_partenaire'] is not empty %} value="{{ partenairedata['email_partenaire'] }}" {% else %} value="{{ old('email_partenaire ') }}" {% endif %}>
											</div>
										</div>
									</div>

								


								</div>
								<!-- /.card-body -->

								<div class="card-footer">
									<button type="submit" class="btn btn-primary">{{ title}}</button>
								</div>
							</form>
						</div>
						<!-- /.card -->

						<!-- general form elements -->


					</div>
					<!--/.col (left) -->

				</div>
				<!-- /.row -->
			</div>
			<!-- /.container-fluid -->
		</section>
		<!-- /.content -->
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>
<!-- /.content-wrapper -->{% endblock %}
