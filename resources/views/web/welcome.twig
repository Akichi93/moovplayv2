{% extends "layouts.front.app" %}


{% block content %}
<div class="modal fade" id="modalRecupForm2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header text-center bg-colorViolet">

				<h3 class="modal-title w-100 font-weight-bold text-uppercase inline-block animated fadeInLeft visible"
					style="color:#fff !important;">S'authentifier !</h3>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Fermer</span>
				</button>
			</div>
			<div class="modal-body mx-3">
				<div class="container">
					<div class="row content">
						<div class="col-md-6 d-none d-lg-block" style="background:#ccc; padding:5px;">
							<img src="assets/img/img_left.jpeg" class="img-responsive img-fluid">
						</div>
						<div class="col-md-6">
							<h4 class="connex_text">Connectez-vous !</h4>
							<input class="form-control" style="margin-bottom:10px;" type="text"
								placeholder="Numéro de téléphone Moov ou adresse Mail" />
							<input class="form-control" style="margin-bottom:10px;" type="text"
								placeholder="Mot de passe" />
							<div class="row">
								<div class="col-md-6">
									<p class="m-t-10">
										<a href="#" style="text-decoration:underline; color:#005BA4;">Mot de passe
											oublié ?</a>
									</p>
								</div>
								<div class="col-md-6">
									<a href="#" class="btn btn-primary">Se connecter</a>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12 m-t-10">
									<p>Ou si vous n'avez pas de compte,
										<a href="#"
											style="text-decoration:underline; color:#005BA4; font-weight:bold;">Inscrivez-vous
											!</a>
									</p>
								</div>
							</div>
							<!--                               <input class="form-control" style="margin-top:20px;" type="tel" placeholder="Entrez votre OTP">-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" id="modalRecupForm5" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header text-center">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">Fermer</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="container">
					<div class="row content">
						<div class="">
							<img src="assets/img/visuel-pop-up-1024x563.jpg" class="img-responsive"
								style=" max-width: 100%; height: auto;">
							<br>
						</div>

					</div>
				</div>
			</div>
			<div class="modal-footer ">
				<div class="container">
					<div class="row content">

						<div class="align-items-center text-center">
							<a href="#" class="text-center link_plus">En savoir+</a>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<section id="hero">
	<div class="container">
		<div class="row content animated fadeInUp visible" data-animation="fadeInUp">
			{% include 'layouts.front.search' %}
				

			<div class="col-md-12">
				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100 ronded_container" src="assets/img/moov-folie1-1-2048x655.jpg"
								alt="First slide">
							<!-- <div class="text_desc">
																																										                            Gael Garcia Bernal et Vicky Krieps pris au piège sur une plage de rêve...
																																										                        </div> -->
						</div>

						<div class="carousel-item">
							<img class="d-block w-100 ronded_container" src="assets/img/moov-tv-1-2048x655.jpg"
								alt="Second slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100 ronded_container" src="assets/img/moov-enfant-1-2048x655.jpg"
								alt="Third slide">
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"
							style="background: #ffdc25 !important;">
							<i class="fa fa-angle-left"
								style="color: #030303 !important;font-size: 30px !important;font-weight: 900;"></i>
						</span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-prev-icon" aria-hidden="true"
							style="background: #ffdc25 !important;">
							<i class="fa fa-angle-right"
								style="color: #030303 !important;font-size: 30px !important;font-weight: 900;"></i>
						</span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>

			<div class="col-md-12">
				{% if session_get('resend') %}
				<div class="alert alert-primary">
					<a href="#close" class="close" data-dismiss="alert">&times;</a>
					{{ session_get('resend') }}
				</div>
				{% endif %}
			</div>

			<div class="col-md-12">
				{% if session_get('login') %}
				<div class="alert alert-primary">
					<a href="#close" class="close" data-dismiss="alert">&times;</a>
					{{ session_get('login') }}
				</div>
				{% endif %}
			</div>

				{% if session_get('error') %}
				<div class="alert alert-danger">
					<a href="#close" class="close" data-dismiss="alert">&times;</a>
					{{ session_get('error') }}
				</div>
				{% endif %}

			<div class="col-md-12 text-center m-t-10" style="margin-bottom: 10px;">
				<a class="btn btn_desc" data-toggle="collapse" href="#collapseExample" role="button"
					aria-expanded="false" aria-controls="collapseExample"
					style="text-transform:uppercase !important;">Description de Moov Play
					<i class="icofont-arrow-down"></i>
				</a>

				<div class="collapse" id="collapseExample">
					<div class=" card-body font_card">
						Moov Play, retrouvez le meilleur du divertissement numérique avec des bonus offerts pour un
						abonnement.
					</div>
				</div>
				<br />

			</div>


		</div>
	</div>
</section>

<!-- End Hero -->
<main id="main">
	<!-- ======= About Section ======= -->
	<section id="about" class="about">
		<div class="container">
			<div class="row content animated fadeInUp visible" data-animation="fadeInUp" style="margin-bottom:15px;">
				<div class="col-md-12 text-center m-t-10">
					<h2 class="up_text" style="color:#005BA4;">découvrez nos univers</h2>
					<hr class="hr_mate">
				</div>
				<div class="col-md-12 text-center m-t-10">
					{% for menu in services %}
					<p class="text_desc2 animated fadeInLeft m-t-10">
						<a href="{{ menu['url'] }}" class="" style="color:#fff;">{{ menu.nom_categorie }}</a>
					</p>

					<div class="row">
						{% for service in menu.service %}
						<div class="col-md-3 m-t-10">
							<div class="member">
								<a href="{{ url('detailservice', service['service_url']) }}">
									<img src="/image/service_images/{{ service.image }}" style="height:10%"
										class="img-responsive img-fluid img-selection" alt="" title="">
								</a>
							</div>
							<div class="type_vod">
								<div class="row content">
									<div class="col-md-8">
										<p style="margin-top:5px; font-weight:bold; color:#fff; font-size:12px">
											 {{ service.nom_service | slice(0, 18)  }}</p>
									</div>
									<div class="col-md-4">
										<a href="{{ url('detailservice', service['service_url']) }}"
											class="btn btn-sucrib" style="float:right;">Souscrire</a>
									</div>

								</div>
							</div>
						</div>
						
						<br />
						{% endfor %}

					</div>



					{% endfor %}
				</div>


			</div>
		</div>
	</section>



</main>
<!-- End #main -->


{% endblock %}